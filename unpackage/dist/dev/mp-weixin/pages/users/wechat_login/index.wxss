page {
  background: #fff;
}
.wrapper {
  position: relative;
  height: 100vh;
}
.wrapper .bag {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  opacity: .8;
  z-index: -1;
}
.wrapper .bag ._img {
  width: 100%;
  height: 838rpx;
}
.wrapper .merchant-msg {
  padding-top: 252rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 2;
}
.wrapper .merchant-msg ._img {
  width: 152rpx;
  height: 152rpx;
  border-radius: 50%;
}
.wrapper .merchant-msg .name {
  font-size: 40rpx;
  font-weight: 500;
  color: #333333;
  line-height: 56rpx;
  margin-top: 32rpx;
}
.wechat_login {
  margin-top: 96rpx;
}
.wechat_login .img image {
  width: 100%;
}
.wechat_login .btn-wrapper {
  padding: 0 66rpx;
}
.wechat_login .btn-wrapper button {
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  margin-bottom: 40rpx;
  border-radius: 120rpx;
  font-size: 30rpx;
}
.wechat_login .btn-wrapper button.btn1 {
  color: #fff;
}
.wechat_login .btn-wrapper button.btn2 {
  color: #666666;
  border: 1px solid #E4E4E4;
}
.title-bar {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
  line-height: 48rpx;
}
.icon {
  position: absolute;
  left: 30rpx;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
}
.icon image {
  width: 50rpx;
  height: 50rpx;
}
